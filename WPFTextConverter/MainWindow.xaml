<Window x:Class="WPFTextConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTextConverter"
        mc:Ignorable="d"
        Title="Polyboard to Lonira converter" Height="450" Width="800">
    <Grid AllowDrop="True" DragDrop.Drop="Grid_Drop" Height="450" Width="800" Background="LightGray">
        <TextBlock Text="Drop Polyboard output file here." TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40"/>
    </Grid>
</Window>
