<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <a href="MicrosoftIdentity/Account/EditProfile" class="btn btn-primary">Edit Profile</a>
        <a href="MicrosoftIdentity/Account/ResetPassword" class="btn btn-primary">Reset Password</a>
        <a href="MicrosoftIdentity/Account/SignOut" class="btn btn-primary">Log out</a> 
    </Authorized>
    <NotAuthorized>
        <a href="MicrosoftIdentity/Account/SignIn">Log in</a>
    </NotAuthorized>
</AuthorizeView>

@code {
    // TODO: structured login should be used
    [Inject] private ILogger<LoginDisplay> Logger { get; set; }

    protected override void OnInitialized()
    {
        Logger.LogInformation("LoginDisplay component initialized");
    }
}